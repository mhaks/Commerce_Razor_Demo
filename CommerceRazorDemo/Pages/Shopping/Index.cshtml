@page
@model CommerceRazorDemo.Pages.Shopping.IndexModel

@{
    ViewData["Title"] = "Shopping";
}

<h1>Shopping</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                <!--@Html.DisplayFor(modelItem => item.Title)-->
                <a asp-page="./Details" asp-route-id="@item.Id">@item.Title</a>                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
