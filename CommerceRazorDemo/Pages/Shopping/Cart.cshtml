@page
@model CommerceRazorDemo.Pages.Shopping.CartModel
@{
}


@if (Model.Order != null && Model.Order.Products != null && Model.Order.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th></th>
            </tr>            
        </thead>
        <tbody>
            @foreach(var item in Model.Order.Products)
            {
                <tr>
                    <td>@item.Product.Title</td>
                    <td>
                        <!--Html.DisplayFor(item.Quantity)-->
                        <input id="quantity" name="quantity" value=@item.Quantity />                        
                    </td>
                    <td>@item.Price</td>
                    <td>@(item.Quantity * item.Price)</td>
                    <td>
                        <button class="btn bg-success">Update</button>
                        <form method="post" asp-area="Shopping" asp-page="Cart" asp-page-handler="Edit">
                            <input type="hidden" id="customerId" name="customerId" value=@Model.Order.CustomerId />
                            <input type="hidden" id="orderProductId" name="orderProductId" value=@item.Id />
                            <button class="btn bg-warning" type="submit">Remove</button>
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td align="left" colspan="2">Subtotal</td>
                <td align="right" colspan="2">@Model.Order.Subtotal</td>
            </tr>
            <tr>
                <td align="left" colspan="2">Tax</td>
                <td align="right" colspan="2">@Model.Order.Tax</td>
            </tr>
            <tr>
                <td align="left" colspan="2">Total Price</td>
                <td align="right" colspan="2">@Model.Order.TotalPrice</td>
            </tr>
        </tfoot>
    </table>
}
else
{
    <h2> No items currently in cart</h2>
}
