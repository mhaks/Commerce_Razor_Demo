@page
@model CommerceRazorDemo.Pages.Customers.EditModel

@{
    if (Model.CustomerId != 0)
    {
        ViewData["Title"] = "Edit Customer";
    }
    else
    {
        ViewData["Title"] = "Create Customer ";

    }
}

<section class="py-2">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row ">
            <h4>@ViewData["Title"]</h4>
            <hr />
        </div>

        <div class="row">
                <div class="col-md-4">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CustomerId" />
            
                        <div class="form-group mt-3">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Address1" class="control-label"></label>
                            <input asp-for="Address1" class="form-control" />
                            <span asp-validation-for="Address1" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Address2" class="control-label"></label>
                            <input asp-for="Address2" class="form-control" />
                            <span asp-validation-for="Address2" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="StateLocationId" class="control-label"></label>
                            <select asp-for="StateLocationId" class="form-control" asp-items="Model.UsStates"></select>
                            <span asp-validation-for="StateLocationId" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="PostalCode" class="control-label"></label>
                            <input asp-for="PostalCode" class="form-control" />
                            <span asp-validation-for="PostalCode" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control" />
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3 row">
                            <div class="col">
                                <input type="submit" value="Save" class="btn btn-outline-dark mt-auto text-center col-6" />
                            </div>
                            <div class="col text-end">
                                <a asp-page="./Index" >Back to List</a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>

    </div>
</section>

