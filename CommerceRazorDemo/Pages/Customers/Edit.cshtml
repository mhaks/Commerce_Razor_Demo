@page
@model CommerceRazorDemo.Pages.Customers.EditModel

@{
    if (Model.Customer.Id != 0)
    {
        ViewData["Title"] = "Edit Customer";
    }
    else
    {
        ViewData["Title"] = "Create Customer ";

    }
}

<h1>@ViewData["Title"]</h1>

<h4>Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Customer.Id" />
            
            <div class="form-group mt-3">
                <label asp-for="Customer.FirstName" class="control-label"></label>
                <input asp-for="Customer.FirstName" class="form-control" />
                <span asp-validation-for="Customer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.LastName" class="control-label"></label>
                <input asp-for="Customer.LastName" class="form-control" />
                <span asp-validation-for="Customer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.Address1" class="control-label"></label>
                <input asp-for="Customer.Address1" class="form-control" />
                <span asp-validation-for="Customer.Address1" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.Address2" class="control-label"></label>
                <input asp-for="Customer.Address2" class="form-control" />
                <span asp-validation-for="Customer.Address2" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.City" class="control-label"></label>
                <input asp-for="Customer.City" class="form-control" />
                <span asp-validation-for="Customer.City" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.StateLocationId" class="control-label"></label>
                <select asp-for="Customer.StateLocationId" class="form-control" asp-items="Model.UsStates"></select>
                <span asp-validation-for="Customer.StateLocationId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.PostalCode" class="control-label"></label>
                <input asp-for="Customer.PostalCode" class="form-control" />
                <span asp-validation-for="Customer.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.PhoneNumber" class="control-label"></label>
                <input asp-for="Customer.PhoneNumber" class="form-control" />
                <span asp-validation-for="Customer.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.EmailAddress" class="control-label"></label>
                <input asp-for="Customer.EmailAddress" class="form-control" />
                <span asp-validation-for="Customer.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="Customer.UserName" class="control-label"></label>
                <input asp-for="Customer.UserName" class="form-control" />
                <span asp-validation-for="Customer.UserName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary col-4" />
            </div>
        </form>
    </div>
</div>

<div class="mt-4">
    <a asp-page="./Index">Back to List</a>
</div>

